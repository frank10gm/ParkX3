<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ParkX3.AddCar"
             Title="Add car">
  <ContentPage.ToolbarItems>
    <ToolbarItem Text="Cancel" ></ToolbarItem>
    <ToolbarItem Text="Save" ></ToolbarItem>
  </ContentPage.ToolbarItems>
  <ContentPage.Content>

    <ScrollView>
      <StackLayout x:Name="lay" VerticalOptions="StartAndExpand" Padding="20,20,20,20">
      
        <Label Text="Brand"></Label>
        <Entry Placeholder="Brand" />
        <Label Text="Model name"></Label>
        <Entry Placeholder="Model name" />
        <Label Text="Status"></Label>
        <Entry Placeholder="Status" />
        <Label Text="Year"></Label>
        <Entry Placeholder="Year" />
        <Label Text="Image link"></Label>
        <Entry Placeholder="Image link" />
        <Label Text="Dimensions"></Label>
        <Entry Placeholder="Dimensions" />
        <Label Text="Engines"></Label>
        <Entry Placeholder="Engines" />
        <Label Text="Types"></Label>
        <Entry Placeholder="Types" />
        <Label Text="Price"></Label>
        <Entry Placeholder="Price" />
        <Label Text="Description"></Label>
        <Entry Placeholder="Description" />
        <Button Text="Save"  />        
        <Button Text="Cancel" />
      </StackLayout>
    </ScrollView>
  </ContentPage.Content>
</ContentPage>